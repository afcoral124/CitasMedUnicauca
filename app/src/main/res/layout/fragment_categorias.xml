<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context="com.unicauca.citasmed.FragmentCategorias">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione una categoría"
            android:textAlignment="center"
            android:textColor="#0C0D0E"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical">

                <Button
                    android:id="@+id/MedicoGeneral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Médico General"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnCardiologia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Cardiología"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnFisioterapia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Fisioterapia"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnFonoaudiologia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Fonoaudiología"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnGinecologia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Ginecología"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnOdontologia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Odontología"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnOftalmologia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Oftalmología"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnOncologia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Oncología"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnTraumatologia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#03A9F4"
                    android:onClick="onClick"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:text="Traumatología"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>